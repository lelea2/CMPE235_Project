<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/colorBackground"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.kdao.cmpe235_project.AudioActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Audio Record"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:textColor="@color/colorTextMainColor"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="Helvetica Neue"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:id="@+id/audioImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Record"
        android:id="@+id/button_record"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:onClick="recordAudio"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorRed"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:text="Stop"
        android:id="@+id/button_stop"
        android:layout_alignTop="@+id/button_record"
        android:layout_centerHorizontal="true"
        android:onClick="stopAudio"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorGreen"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:text="play"
        android:id="@+id/button_play"
        android:layout_alignTop="@+id/button_record"
        android:layout_alignParentRight="true"
        android:onClick="playAudio"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorBlue"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:text="Share Audio"
        android:id="@+id/button_share_audio"
        android:layout_below="@id/audioImage"
        android:layout_centerHorizontal="true"
        android:onClick="shareAudio"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorBlueLight"
        style="?android:attr/borderlessButtonStyle"/>

</LinearLayout>
