<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context="com.kdao.cmpe235_project.CameraActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Photo"
        android:id="@+id/textView16"
        android:textColor="#FFF"
        android:textSize="30sp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="Helvetica Neue"/>
    <ImageView
        android:id="@+id/viewImage"
        android:src="@drawable/main_image1"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:scaleType="fitXY"
        android:layout_marginTop="20px"
        android:layout_alignParentEnd="true" />
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:layout_gravity="bottom">
        <TableRow
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom|center"
            android:layout_marginBottom="5dp">
            <Button
                android:id="@+id/image_share_btn"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="@string/message_sharing"
                android:layout_alignTop="@+id/camera_btn"
                android:layout_toEndOf="@+id/camera_btn"
                android:background="@color/colorRed"
                style="?android:attr/borderlessButtonStyle"
                android:layout_marginRight="5dp" />
            <Button
                android:id="@+id/upload_btn"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="@string/message_upload"
                android:layout_alignTop="@+id/image_share_btn"
                android:layout_toEndOf="@+id/image_share_btn"
                android:background="@color/colorGreen"
                style="?android:attr/borderlessButtonStyle"
                android:layout_marginLeft="5dp" />
        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:gravity="top|center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <Button
                android:id="@+id/camera_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/camera_btn"
                android:layout_below="@+id/viewImage"
                android:layout_alignParentStart="true"
                android:background="@color/colorBlue"
                style="?android:attr/borderlessButtonStyle"
                android:layout_marginRight="5dp" />
            <Button
                android:id="@+id/video_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/video_btn"
                android:background="@color/colorBlueLight"
                style="?android:attr/borderlessButtonStyle"
                android:layout_marginLeft="5dp" />
        </TableRow>
    </TableLayout>
</LinearLayout>