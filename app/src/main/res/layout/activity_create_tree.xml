<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorBackground"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:nestedScrollingEnabled="false"
              tools:context="com.kdao.cmpe235_project.CreateTreeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Create New Tree"
        android:textColor="#FFF"
        android:textSize="30sp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="Helvetica Neue"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/new_tree_title"
        android:layout_gravity="center"
        android:background="@drawable/border_default"
        android:hint="Tree Name"
        android:textSize="19dp"
        android:textColorHint="@color/colorTextHint"
        android:fontFamily="Helvetica Neuedp"
        android:paddingLeft="16dp"
        android:textColor="@color/colorTextMainColor"
        android:textColorHighlight="@color/colorTextMainColor"
        android:layout_marginBottom="10dp"
        android:singleLine="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/new_tree_address"
        android:background="@drawable/border_default"
        android:hint="Address"
        android:textSize="19dp"
        android:textColorHint="@color/colorTextHint"
        android:fontFamily="Helvetica Neuedp"
        android:paddingLeft="16dp"
        android:textColor="@color/colorTextMainColor"
        android:textColorHighlight="@color/colorTextMainColor"
        android:layout_marginBottom="10dp"
        android:singleLine="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/new_tree_desc"
        android:gravity="left|top"
        android:paddingTop="10dp"
        android:hint="Description"
        android:textSize="19dp"
        android:textColorHint="@color/colorTextHint"
        android:fontFamily="Helvetica Neuedp"
        android:paddingLeft="16dp"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border_default"
        android:layout_gravity="center" />

