        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_default"
            android:layout_marginBottom="15dp"
            android:id="@+id/tree_sensor_state">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:textColor="@color/colorTextMainColor"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="19dp"
                android:id="@+id/tree_sensor_count" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:id="@+id/sensorView"
                android:layout_marginRight="10dp"
                android:text="View Sensors >>"
                android:textColor="@color/colorOrange"
                style="?android:attr/borderlessButtonStyle"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_default"
            android:layout_marginBottom="15dp"
            android:id="@+id/tree_comments">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:textColor="@color/colorTextMainColor"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="19dp"
                android:id="@+id/tree_comments_count" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:id="@+id/commentView"
                android:layout_marginRight="10dp"
                android:text="View Comments >>"
                android:textColor="@color/colorGreen"
                style="?android:attr/borderlessButtonStyle"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
        <com.google.android.youtube.player.YouTubePlayerView
            android:id="@+id/tree_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/tree_like_count"
            android:background="@drawable/tree_facebook"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"/>
        <Button
            android:layout_marginBottom="15dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/btnBack"
            android:onClick="navigateToAllTree"
            android:layout_width="184dp"
            android:layout_height="50dp"
            android:background="#E24F67"
            android:text="BACK"
            android:textColor="#fff"
            style="?android:attr/borderlessButtonStyle"
            />
    </LinearLayout>
