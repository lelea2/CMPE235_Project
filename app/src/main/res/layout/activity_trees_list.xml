<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorBackground"
    android:paddingBottom="@dimen/activity_vertical_margin_bottom"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kdao.cmpe235_project.TreesListActivity"
    android:orientation="vertical"
    android:scaleType = "centerCrop"
    android:layout_weight="1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="All Trees"
        android:id="@+id/tree_list_heading"
        android:textColor="@color/colorTextMainColor"
        android:textSize="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="Helvetica Neue"
        android:layout_gravity="left" />

            <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/tree_list_heading"
            android:background="@color/colorBackgroundLight"
            android:id="@+id/treeListView"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="10" />


            <Button
                android:id="@+id/btn_back"
                android:background="@color/colorRed"
                android:onClick="navigateToMainActivity"
                android:text="BACK"
                android:textColor="#fff"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:maxHeight="50dp"
                android:minHeight="50dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal" />

</LinearLayout>
