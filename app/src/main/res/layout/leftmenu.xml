<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="300dp"
             android:layout_height="match_parent"
             android:id="@+id/menu_frame"
             android:background="@drawable/border_leftmenu_default">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:layout_gravity="left|top">

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textClock"
            style="@style/TextClock"
            android:format12Hour="MMM dd yyyy"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp" />
        <TextClock
            style="@style/TextClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textClock2"
            android:format12Hour="HH:mm"
            android:layout_marginLeft="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:id="@+id/nav_fullName"
            android:layout_marginLeft="20dp"
            android:textSize="30sp"
            android:textColor="#FFF"
            android:layout_marginBottom="30dp" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="All Tree"
            android:id="@+id/nav_alltree"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFF"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/border_leftmenu_default"
            android:textSize="20dp"
            android:clickable="true"
            android:textAllCaps="false" />
        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="Scan"
            android:id="@+id/nav_scan"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFF"
            android:background="@drawable/border_leftmenu_default"
            android:textSize="20dp"
            android:clickable="true"
            android:textAllCaps="false"/>
        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="Photo"
            android:id="@+id/nav_photo"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFF"
            android:background="@drawable/border_leftmenu_default"
            android:textSize="20dp"
            android:clickable="true"
            android:textAllCaps="false"/>
        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="Audio"
            android:id="@+id/nav_audio"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFF"
            android:background="@drawable/border_leftmenu_default"
            android:textSize="20dp"
            android:clickable="true"
            android:textAllCaps="false"/>
        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="Logout"
            android:id="@+id/nav_register_link"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFF"
            android:background="@drawable/border_leftmenu_default"
            android:textSize="20dp"
            android:clickable="true"
            android:textAllCaps="false"/>
    </LinearLayout>
</FrameLayout>
